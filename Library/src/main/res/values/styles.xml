<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="actionMenuTextAppearance">
            @style/Theme.AppTheme.ActionBar.menu
        </item>
        <item name="titleTextStyle">@style/Theme.AppTheme.ActionBar.Title</item>
    </style>

    <style name="Theme.AppTheme.ActionBar.Title"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.AppTheme.ActionBar.menu"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
